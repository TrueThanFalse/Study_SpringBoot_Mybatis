<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
  
<!-- CamelCase & Alias 세팅 방법 -->
<!-- settings 태그가 typeAliases 태그보다 위에 있어야 함 -->
<!-- 그렇지 않으면 Error 발생함 -->
<configuration>

	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>
	
	<typeAliases>
		<typeAlias alias="bvo" type="com.example.mybatis.domain.BoardVO"/>
		<typeAlias alias="cvo" type="com.example.mybatis.domain.CommentVO"/>
		<typeAlias alias="fvo" type="com.example.mybatis.domain.FileVO"/>
		<typeAlias alias="mvo" type="com.example.mybatis.security.MemberVO"/>
		<typeAlias alias="avo" type="com.example.mybatis.security.AuthVO"/>
	</typeAliases>
	
</configuration>
